<div class="wrapper">
  <div class="edit-form" style="margin-right:160px; margin-top: 50px;">
    <h3> Edit Profile </h3>

    <%= form_for([@user, @profile], :html => {:class => "form-group"}) do |f| %>
      <%= f.hidden_field :user_id %>
        <%= f.label :first_name, "First name:", class: "col-md-4 control-label" %>
          <%= f.text_field :first_name, class: "form-control" %>
        <%= f.label :last_name, "Last name:", class: "col-md-4 control-label" %>
          <%= f.text_field :last_name, class: "form-control" %>
        <%= f.label :bio, "Profile Bio:", class: "col-md-4 control-label" %>
          <%= f.text_field :bio, class: "form-control" %>
      <%= f.submit "Submit", class: "btn btn-default btn-secondary edit-submit" %>
    <% end %>
    <br>
    <br>
    <%= link_to 'Cancel', root_path, :class => "btn btn-secondary" %>
    <%= link_to 'Delete Profile', user_profile_path(current_user, @profile), :method => :delete, :class => "btn btn-danger" %>
  </div>
</div>
