<!-- ---- -->
<div class="container">
  <div class="row">
    <div class="col">
      <!-- 1 of 3 -->
    </div>
    <div class="col-6">
      <!-- 2 of 3 (wider) -->

      <%= form_for([@user, @profile], :html => {:class => "form-group"}) do |f| %>
        <h3> Edit Profile </h3>
        <%= f.hidden_field :user_id %>

        <div class="form-group">

        <div class="form-group">
          <%= f.label :first_name, "First name:", class: "col-md-4 control-label" %>
          <div class="col-md-8">
            <%= f.text_field :first_name, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :last_name, "Last name:", class: "col-md-4 control-label" %>
          <div class="col-md-8">
            <%= f.text_field :last_name, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :bio, "Profile Bio:", class: "col-md-4 control-label" %>
          <div class="col-md-8">
            <%= f.text_field :bio, class: "form-control" %>
          </div>
        </div>

        <%= f.submit "Submit", class: "btn btn-default btn-primary" %>
      <% end %>

      <%= link_to 'Delete Profile', user_profile_path(current_user, @profile), :method => :delete, :class => "btn btn-secondary" %>

    </div>
    <div class="col">
      <!-- 3 of 3 -->
    </div>
  </div>
  <div class="row">
    <div class="col">
      <!-- 1 of 3 -->
    </div>
    <div class="col-5">
      <!-- 2 of 3 (wider) -->
    </div>
    <div class="col">
      <!-- 3 of 3 -->
    </div>
  </div>
</div>
