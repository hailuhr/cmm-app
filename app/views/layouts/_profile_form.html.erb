<%= form_for([@user, @profile], :html => {:class => "form-group"}) do |f| %>
  <%= f.hidden_field :user_id %>
    <%= f.label :first_name, "First name:", class: "col-md-4 control-label" %>
      <%= f.text_field :first_name, class: "form-control" %>
    <%= f.label :last_name, "Last name:", class: "col-md-4 control-label" %>
      <%= f.text_field :last_name, class: "form-control" %>
    <%= f.label :bio, "Profile Bio:", class: "col-md-4 control-label" %>
      <%= f.text_field :bio, class: "form-control" %>
    <div class="edit-submit">
      <%= f.submit "Submit", class: "btn btn-default btn-primary" %>
      <%= link_to 'Cancel', root_path, :class => "btn btn-default btn-secondary" %>
    </div>
<% end %>
