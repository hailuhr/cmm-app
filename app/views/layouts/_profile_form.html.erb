<%= form_for([@user, @profile], :html => {:class => "form-group"}) do |f| %>
  <div class="field">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
  </div>

  <div class="field">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
  </div>

  <div class="field">
    <%= f.label :bio %><br />
    <%= f.text_field :bio, autofocus: true, autocomplete: "bio" %>
  </div>

  <div class="actions">
    <%= f.submit "Submit", :class => "btn btn-primary submit-button profile-form-button" %>
  </div>
<% end %>

<%= link_to 'Cancel', root_path, :class => "btn btn-secondary" %>
