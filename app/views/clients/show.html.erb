<div class="wrapper profile-view">
  <header class="header">
    <h1><%=@client.name%> Client</h1>
  </header>
  <aside class="sidebar">
    <div class="profile-img">
    </div>

    <div class="profile-work">
        <br>
    </div>
  </aside>
  <article class="content">

    <div class="profile-info">

      <% if !(@client.projects.empty?) %>
        <label>Projects:</label>
        <% @client.projects.each do |project| %>
          <br>
          <%=project.name%>
        <% end %>
      <% else %>
        <br>
        No projects at the moment
        <br>
      <% end %>

    </div>

    <br>
    <span><%= link_to 'All Clients', clients_path, :class => "btn btn-secondary" %></span>
    <span><%= link_to 'Edit Client', edit_client_path, :class => "btn btn-primary" %></span>


  </article>
</div>
