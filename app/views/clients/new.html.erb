<div class="center center-form">

  <h3> Create Client </h3>
  <div class="client-form">


    <%= form_for(@client, :html => {:class => "form-group"}) do |f| %>


      <div class="field">
        <%= f.label :name %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "last_name" %>
      </div>


      <div class="actions">
        <%= f.submit "Save Client", :class => "btn btn-primary submit-button profile-form-button" %>
      </div>

      <% if @client.errors.any? %>
      <div id="error_explanation" class="devise-errors">
        <h6><%= pluralize(@client.errors.count, "error") %> prohibited this client from being saved:</h6>

        <ul>
        <% @client.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
      <% end %>
    <% end %>

    <%= link_to 'Cancel', root_path, :class => "btn btn-secondary" %>
</div>
</div>
